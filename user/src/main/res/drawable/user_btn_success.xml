<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="5dp"/>

            <gradient
                android:startColor="#449d44"
                android:endColor="#449d44"
                android:centerColor="#449d44"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="5dp"/>

            <gradient
                android:startColor="#5cb85c"
                android:endColor="#5cb85c"
                android:centerColor="#5cb85c"/>
        </shape>
    </item>
</selector>